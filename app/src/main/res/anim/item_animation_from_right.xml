<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="400">
    <alpha
        android:fromAlpha="0"
        android:toAlpha="1"/>

    <rotate
        android:fromDegrees="270"
        android:toDegrees="0"
        android:pivotY="100%"
        android:pivotX="100%"/>

    <scale
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromYScale="0"
        android:fromXScale="0"
        android:toYScale="1"
        android:toXScale="1"/>
</set>